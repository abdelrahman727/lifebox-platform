{
  "name": "@lifebox/api",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:production": "NODE_ENV=production nest build",
    "build:validate": "node scripts/build-validate.js",
    "dev": "nest start --debug --watch",
    "start": "node dist/main",
    "start:debug": "nest start --debug --watch",
    "start:production": "NODE_ENV=production node dist/main",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --cache",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rimraf dist coverage .eslintcache *.tsbuildinfo",
    "postinstall": "node scripts/postinstall.js",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@lifebox/database": "file:../../libs/database",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/platform-socket.io": "^10.4.20",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/websockets": "^10.4.20",
    "@prisma/client": "^5.22.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/puppeteer": "^5.4.7",
    "@types/twilio": "^3.19.2",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "csv-parse": "^6.1.0",
    "csv-stringify": "^6.6.0",
    "libphonenumber-js": "^1.12.10",
    "mathjs": "^14.6.0",
    "mqtt": "^5.14.0",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "puppeteer": "^24.16.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^6.0.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.1.5",
    "rimraf": "^5.0.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0"
  }
}
