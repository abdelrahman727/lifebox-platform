{
  "name": "@lifebox/mqtt-ingestion",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "build:production": "NODE_ENV=production tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" --cache",
    "lint:fix": "eslint \"src/**/*.ts\" --fix --cache",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rimraf dist *.tsbuildinfo .eslintcache"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "mqtt": "^5.3.0",
    "pino": "^8.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.0.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.10",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
